---
import Layout from "../layouts/Layout.astro";
import { INDEX_PAGE_ID } from "../server-constants";
import { getAllBlocksByBlockId } from "../lib/notion/client.ts";
import PostBody from "../components/PostBody.astro";

const [blocks] = await Promise.all([getAllBlocksByBlockId(INDEX_PAGE_ID)]);
---

<Layout title="HOME" desctiption="" path="/">
  <div class="container">
    <main>
      <h2>やっほー</h2>
      <p>horomiでーーす</p>
      <p>これから楽しみ！</p>
      <p>これからガンガン改造していくぞーーーー</p>
      <PostBody blocks={blocks} />
    </main>
  </div>
</Layout>

<style>
  .container {
    width: 640px;
    max-width: 100%;
    margin: 0 auto;
  }

  .container > main {
    margin-bottom: 40px;
  }
  .container div:last-child {
    margin-bottom: 0;
  }

  .container h2 {
    margin: 0 0 14px;
    font-size: 1.4rem;
    font-weight: 400;
  }

  .container p {
    margin: 0.3rem auto;
    line-height: 2rem;
  }
</style>
