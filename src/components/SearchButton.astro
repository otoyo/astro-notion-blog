---
import { Icon } from 'astro-icon'
---

<button
  class="search-button open-search-modal block border-solid border-2 border-gray-200 rounded-lg w-full"
  type="button"
>
  <Icon name="octicon:search-24" />
  <span>Search</span>
</button>

<style>
  .search-button {
    display: flex;
    background-color: transparent;
    padding: 0.4rem 0.4rem;
    color: #777;
    font-size: 0.95rem;
    font-weight: bold;
  }
  .search-button:hover {
    cursor: pointer;
    background-color: #ddd;
  }
  .search-button svg {
    width: 20px;
    height: 20px;
    margin-right: 0.2rem;
  }
  [astro-icon="octicon:search-24"] {
    color: var(--fg);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    function handleKeydown(event: any) {
      if (event.keyCode === 75 && event.metaKey) {
        // Ctrl+K or Cmd+K
        document.querySelector('.open-search-modal').click()
      }
    }

    document.addEventListener('keydown', handleKeydown)
  })
</script>
