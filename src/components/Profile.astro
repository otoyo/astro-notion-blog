---
const username = import.meta.env.ASTRO_NOTION_BLOG_USERNAME || 'default'
const xUrl = import.meta.env.ASTRO_NOTION_BLOG_X_URL
const facebookUrl = import.meta.env.ASTRO_NOTION_BLOG_FACEBOOK_URL
const instagramUrl = import.meta.env.ASTRO_NOTION_BLOG_INSTAGRAM_URL
const linkedinUrl = import.meta.env.ASTRO_NOTION_BLOG_LINKEDIN_URL
const otherUrl = import.meta.env.ASTRO_NOTION_BLOG_OTHER_URL
---

